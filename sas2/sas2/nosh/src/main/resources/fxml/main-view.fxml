<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!-- src/main/resources/fxml/main-view.fxml -->
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.catering.controller.MainController">
   <top>
      <VBox spacing="10.0">
         <children>
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Sistema di Gestione Menu - Catering" />
            <Separator />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </top>
   <center>
      <SplitPane dividerPositions="0.3, 0.7" orientation="HORIZONTAL">
         <items>
            <!-- Left Panel - Menu Creation -->
            <VBox spacing="10.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Creazione Menu" />
                  <Separator />
                  
                  <!-- Menu Creation Form -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Titolo Menu:" />
                        <TextField fx:id="titoloField" promptText="Inserisci il titolo del menu" />
                        
                        <Label text="Evento:" />
                        <ComboBox fx:id="eventoComboBox" maxWidth="Infinity" promptText="Seleziona evento" />
                        
                        <Button fx:id="createMenuButton" maxWidth="Infinity" onAction="#createMenu" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Crea Menu" />
                     </children>
                  </VBox>
                  
                  <Separator />
                  
                  <!-- Menu List -->
                  <VBox spacing="5.0" VBox.vgrow="ALWAYS">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Menu Esistenti" />
                        <ListView fx:id="menuListView" VBox.vgrow="ALWAYS" />
                     </children>
                  </VBox>
                  
                  <Separator />
                  
                  <!-- Menu Actions -->
                  <VBox spacing="5.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Azioni Menu" />
                        
                        <HBox spacing="5.0">
                           <children>
                              <TextField fx:id="sezioneField" promptText="Nome sezione" HBox.hgrow="ALWAYS" />
                              <Button fx:id="addSezioneButton" onAction="#addSezione" text="Aggiungi Sezione" />
                           </children>
                        </HBox>
                        
                        <Button fx:id="addRicettaButton" maxWidth="Infinity" onAction="#addRicettaToMenu" text="Aggiungi Ricetta Selezionata" />
                        <Button fx:id="publishButton" maxWidth="Infinity" onAction="#publishMenu" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Pubblica Menu" />
                        <Button fx:id="exportPDFButton" maxWidth="Infinity" onAction="#exportPDF" style="-fx-background-color: #FF9800; -fx-text-fill: white;" text="Esporta PDF" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <!-- Center Panel - Menu Structure -->
            <VBox spacing="10.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Struttura Menu" />
                  <Separator />
                  
                  <TreeView fx:id="menuStructureTree" VBox.vgrow="ALWAYS" />
                  
                  <Separator />
                  
                  <!-- Event Info -->
                  <VBox spacing="5.0">
                     <children>
                        <Label style="-fx-font-weight: bold;" text="Informazioni Evento" />
                        <TextArea fx:id="eventoInfoArea" editable="false" maxHeight="100.0" minHeight="100.0" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
            
            <!-- Right Panel - Ricettario -->
            <VBox spacing="10.0">
               <children>
                  <Label style="-fx-font-weight: bold;" text="Ricettario" />
                  <Separator />
                  
                  <!-- Search -->
                  <VBox spacing="5.0">
                     <children>
                        <Label text="Cerca Ricette:" />
                        <TextField fx:id="ricettaSearchField" promptText="Cerca per nome o descrizione..." />
                     </children>
                  </VBox>
                  
                  <!-- Ricette Table -->
                  <TableView fx:id="ricetteTable" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="nomeRicettaColumn" minWidth="150.0" text="Nome" />
                        <TableColumn fx:id="descrizioneRicettaColumn" minWidth="200.0" text="Descrizione" />
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  
                  <Label style="-fx-font-size: 10px; -fx-text-fill: gray;" text="Doppio click su una ricetta per aggiungerla al menu" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </VBox>
         </items>
      </SplitPane>
   </center>
   <bottom>
      <VBox>
         <children>
            <Separator />
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label text="Stato:" />
                  <Label fx:id="statusLabel" style="-fx-text-fill: #666;" text="Pronto" />
               </children>
               <padding>
                  <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
               </padding>
            </HBox>
         </children>
      </VBox>
   </bottom>
</BorderPane>